<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">
    <fragment
        android:id="@+id/splashFragment"
        android:name="com.abhitues.peerwavee.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splashFragment_to_mainActivity"
            app:destination="@id/mainActivity"
            app:popUpToInclusive="true"/>
    </fragment>
    <activity
        android:id="@+id/mainActivity"
        android:name="com.abhitues.peerwavee.MainActivity"
        android:label="MainActivity" />
    <activity
        android:id="@+id/fileReceiverActivity"
        android:name="com.abhitues.peerwavee.receiver.FileReceiverActivity"
        android:label="FileReceiverActivity" />
    <activity
        android:id="@+id/fileSenderActivity"
        android:name="com.abhitues.peerwavee.sender.FileSenderActivity"
        android:label="FileSenderActivity" />
</navigation>